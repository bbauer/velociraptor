<!DOCTYPE html>
<html>
  <head>
    <title>Velociraptor</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false %>
    <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Open+Sans:300,700" %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => false %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div <%= 'id=dark-header' if user_signed_in? %> class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <%= render "layouts/header" %>
        <%= render "layouts/header_nav" if user_signed_in? %>
        <%= render "layouts/header_login" unless user_signed_in? %>
      </div>
    </div>

    <% if !user_signed_in? %>
      <%= render "home/banner" %>
    <% elsif @campaign.present? %>
      <%= render "campaigns/campaign_nav" %>
    <% elsif @agency.present? %>
      <%= render "agencies/agency_nav" %>
    <% end %>

    <div class="container">
      <%= render "layouts/flash" %>
      <%= yield %>
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
